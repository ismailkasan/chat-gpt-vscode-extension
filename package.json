{
  "name": "vscode-chat-gpt",
  "displayName": "vscode-chat-gpt",
  "description": "Extension uses ChatGpt Api to make chat compilations and image generations.",
  "version": "1.2.0",
  "publisher": "ikasann-self",
  "bugs": {
    "url": "https://github.com/ismailkasan/chat-gpt-vscode-extension/issues",
    "email": "ismailkasan63@gmail.com"
  },
  "homepage": "https://github.com/ismailkasan/chat-gpt-vscode-extension/main/README.md",
  "repository": {
    "url": "https://github.com/ismailkasan/chat-gpt-vscode-extension",
    "type": "git"
  },
  "keywords": [
    "openai",
    "chatgpt",
    "gpt",
    "chat",
    "ai"
  ],
  "icon": "out/media/chat-gpt-logo.jpeg",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chat-gpt-view",
          "title": "Chat Gpt",
          "icon": "./out/media/activity-bar-logo.svg"
        }
      ]
    },
    "views": {
      "chat-gpt-view": [
        {
          "type": "webview",
          "id": "chat-gpt-view-id",
          "name": "Chat Panel"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-chat-gpt.start",
        "title": "Ask to ChatGpt"
      },
      {
        "command": "vscode-chat-gpt.start-image",
        "title": "Start Image"
      },
      {
        "command": "vscode-chat-gpt.refactor",
        "title": "ChatGpt Refactor"   
      },
      {
        "command": "vscode-chat-gpt.addComments",
        "title": "ChatGpt Add Comments"
      },
      {
        "command": "vscode-chat-gpt.addDocumentaion",
        "title": "ChatGpt Add Documentaion"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-chat-gpt.addDocumentaion",
        "key": "ctrl+alt+d",
        "mac": "shift+cmd+d"
      },
      {
        "command": "vscode-chat-gpt.addComments",
        "key": "ctrl+alt+c",
        "mac": "shift+cmd+c"
      },
      {
        "command": "vscode-chat-gpt.refactor",
        "key": "ctrl+alt+r",
        "mac": "shift+cmd+r"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-chat-gpt.start",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-chat-gpt.refactor",
          "group": "ChatGpt",
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == csharp || editorLangId == java" 
        },
        {
          "command": "vscode-chat-gpt.addComments",
          "group": "ChatGpt"
        },
        {
          "command": "vscode-chat-gpt.addDocumentaion",
          "group": "ChatGpt",
          "when": "editorLangId == typescript || editorLangId == javascript || editorLangId == csharp || editorLangId == java" 
        }
      ]
    },
    "webviews": [
      {
        "viewType": "markdown.preview",
        "icon": {
          "light": "./out/media/chat-gpt-logo.jpeg",
          "dark": "./out/media/chat-gpt-logo.jpeg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.16.17",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "rxjs": "^7.8.0",
    "undici": "^5.21.0"
  }
}